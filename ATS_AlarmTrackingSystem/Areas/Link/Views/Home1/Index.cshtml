@model IEnumerable<WebLink.Models.DepartmentModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Link/Views/Shared/_Layout.cshtml";
}


@if (ViewBag.data != null)
{
    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card" style="padding:10px;">
                        <div>
                            <span class="card-title">List System</span>
                        </div>
                        <hr />
                        <div>
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr style=" color: white; background-color: #2262c6 !important;">
                                        <th>STT</th>
                                        <th>NameDP</th>
                                        <th>SystemName</th>
                                        <th>Description</th>
                                        <th>Owner</th>
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var person in ViewBag.data)
                                    {
                                        <tr>
                                            <td>@person.STT</td>
                                            <td>@person.NameDP</td>
                                            <td>@person.SystemName</td>
                                            <td>@person.Description</td>
                                            <td>@person.Owner</td>
                                            <td>@person.Contact</td>
                                            <td>@person.Email</td>
                                            <td><a href="@person.Link" target="_blank" title="@person.Link"> Go to</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div>
}
