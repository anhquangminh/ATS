/* Float four columns side by side */
.columnt {
  float: left;
  width: 23%;
  padding:0 2px;
  margin-left: 3px;
}

/* Remove extra left and right margins, due to padding */
.rowt {margin: 10 -5px;}

/* Clear floats after the columns */
.rowt:after {
  content: "";
  display: table;
  clear: both;

}

/* Responsive columns */
@media screen and (max-width: 600px) {
  .columnt {
    width: 100%;
    display: block;
    margin-bottom: 5px;
  }
}

/* Style the counter cards */
.cardt {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  padding: 3px;
  text-align: center;
  background-color: #f1f1f1;
  min-height: 50px;
  margin-bottom: 15px;
  margin-left: 80px;
  height: 250px;
  width: 410px;
}

